{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    //bundling
    "declaration": true,
    //"esModuleInterop": true,
    "isolatedModules": true,
    "removeComments": true,
    "sourceMap": false,
    //linting
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "esm", "cjs", "node_modules", "tests"]
}
