{
  "name": "@stackpress/lib",
  "version": "0.4.6",
  "license": "Apache-2.0",
  "description": "Shared library used across stackpress projects",
  "author": "Chris <chris@incept.asia>",
  "homepage": "https://github.com/stackpress/lib",
  "bugs": "https://github.com/stackpress/lib/issues",
  "repository": "stackpress/lib",
  "keywords": [
    "ts",
    "typescript",
    "event driven",
    "queue",
    "data management",
    "fs",
    "file system",
    "stackpress"
  ],
  "type": "module",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "exports": {
    "require": "./cjs/index.js",
    "import": "./esm/index.js"
  },
  "files": [
    "cjs",
    "esm",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:tsc && npm run build:esm && npm run build:cjs",
    "build:tsc": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json",
    "build:esm": "echo '{\"type\": \"module\"}' > esm/package.json",
    "build:cjs": "echo '{\"type\": \"commonjs\"}' > cjs/package.json",
    "test": "nyc ts-mocha tests/*.test.ts",
    "report": "nyc report -r lcov"
  },
  "dependencies": {
    "@inquirer/prompts": "7.1.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.20",
    "@types/mocha": "10.0.10",
    "@types/node": "22.9.3",
    "chai": "4.5.0",
    "mocha": "10.8.2",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "17.1.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  }
}
